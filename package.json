    "nanoid": "^4.0.0",
    "next": "^13.3.2",
    "nookies": "^2.5.2",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "socket.io": "^4.6.1",
