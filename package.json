{
  "name": "mtg-drafter",
  "version": "2.1.1",
  "description": "Magic: the Gathering multi-player draft simulator.",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3040",
    "build": "next build",
    "start": "next start -p 3040",
    "lint": "next lint",
    "test": "jest",
    "ssl": "npx local-ssl-proxy --key localhost-key.pem --cert localhost.pem --source 3041 --target 3040",
    "update": "git pull && npm install && npm update && prisma migrate deploy && prisma generate && npm run build && pm2 restart mtg-drafter"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"commonjs\"} prisma/seed.ts"
  },
