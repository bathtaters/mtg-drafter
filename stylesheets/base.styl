blackToAntiqueWhite = invert(99%) sepia(74%) saturate(595%) hue-rotate(305deg) brightness(102%) contrast(96%)
blackToLavenderBlush = invert(92%) sepia(9%) saturate(175%) hue-rotate(256deg) brightness(98%) contrast(98%)
blackToBgdColor = invert(12%) sepia(19%) saturate(453%) hue-rotate(131deg) brightness(95%) contrast(93%)

buttonText = bodyBgd
buttonTextDisabled = alpha(buttonText, 75%)
scrollbarThumb = alpha(bodyText, 50%)
invisible = alpha(bodyBgd, 0)

//* --- Fix SVGs --- *//

.svgColorize
  filter: blackToBgdColor
  display: block


/* --- Scrollbar --- */

thinSize = 7px
thinScrollbar()
  // FireFox
  scrollbar-width: thin

  // Chrome, Edge, and Safari
  &::-webkit-scrollbar
    width: thinSize
    height: thinSize
    overflow: visible

scrollbarColor(thumb = scrollbarThumb, bgd = invisible)
  // thumb ?= scrollbarColor
  // bgd ?= alpha(bodyBgd, 0)

  // FireFox
  scrollbar-color: thumb bgd

  // Chrome, Edge, and Safari
  &::-webkit-scrollbar-track
    background: bgd
    
  &::-webkit-scrollbar-thumb
    //background-color: thumb
    border: solid thinSize thumb
    border-radius: 4px

*
  scrollbarColor()




