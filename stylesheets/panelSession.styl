// Admin Session Detail styling
@require 'colorScheme'

.sessionDetail
    display: grid
    grid-template-areas: "head button" "info extras"
    grid-template-columns: max-content
    grid-gap: 0 1rem
    align-items: center
    margin-bottom: 0.5em

.subpanelHeader
    grid-area: head
    display: inline-block

.sessionInfo
    grid-area: info

.sessionDisconnectContainer
    grid-area: button

.sessionExtraDetail
    grid-area: extras

.subpanelHeader h1
    display: inline-block

.subpanelHeader a
    padding-left: 0.7em
    font-size: 0.7em

.sessionUrl
.sessionTimeDate
    font-size: 0.7em

.sessionStatus
    font-style: italic
    margin-inline-end: 1em


// Player boxes

.adminPlayers
    display: flex
    flex-wrap: wrap

.adminPlayerContainer
    font-size: 0.67em
    border: solid
    padding: 0.5em
    margin: 0.5em
    width: 13rem
    position relative

.adminPlayerHeader
    display: flex
    align-items: center

.playerPosition
    position: absolute
    top: 0.1rem
    left: 0.2rem
    font-size: 0.7rem
    opacity: 75%

.playerPosition.host::after
    content: "host"
    font-size: 0.7em;
    position: absolute;
    margin-left: 0.3em;
    color: gold;

.playerDetailLine
    margin-top: -.3em
    margin-bottom: 0.7em

.playerId
    font-size: 0.8em
    font-style: italic

.playerDate
    font-size: 0.8em

.playerDraftDetail
    margin-inline-end: 1em

.playerDetailTitle
    font-weight: bold
    margin-inline-end: 0.3em

.playerDetailOpponent
.playerDraftDetailContainer
    margin-block: 0.2em

#mainDetailTitle
    margin-block-start: 0.4em

.deckUrl
    display: block
    text-align: center
    font-weight: bold
    margin: 0.4em

// Log box

.logCheckbox
    margin: 0 0.3em
    font-size: 0.85em
    opacity: 85%

#logTextBox
    background: bodyText
    margin: 0.5rem 2%
    padding: 0.3em 0.6em
    height: 10rem
    resize: vertical
    border: solid 0.15rem focusOutline
    overflow: auto

#logTextBox p
    color: bodyBgd
    margin: 0.2em 0
    font-family: monospace

p .logTime
    color: hrColor
    font-weight: bold

p .logUuid
    font-style: italic
    font-weight: lighter
    opacity: 75%
    font-size: 0.75em


// Disconnect player button

.connectionButton
    width: 0.6rem
    height: 0.6rem
    border-radius: 1rem
    padding: 0
    margin: 0.2rem
    border-width: 0.1rem

.connectionButton.connected
    background-color: green
    &:focus
      border: solid 0.1rem darkgreen
    &:hover
      background-color: darkgreen

.connectionButton.disconnected
    background-color: red
    &:focus
      border: solid 0.1rem darkred   
    &:hover
      background-color: darkred


// Card lists

#mainDetailTitle
#sideDetailTitle
    display: inline-block
    padding-left: 0

.mainLandData
.sideLandData
    display: flex
    flex-wrap: wrap
    justify-content: space-evenly
    align-items: center
    margin-bottom: 0.7em

.landDetailBox
    margin: 0 0.5em

.landCount
    margin-inline-start: 0.3em

.adminPlayerDeck
    margin-block-end: 0.7em
    & .cardLineBgd
        font-size: 1.1em

// Card list hider

.boardHeader
    display: inline-block
    cursor: pointer

.boardHeader .hider
    font-size: 0.9em

.boardHeader:hover > .hider
    color:  buttonBgd

