// Main layout of Card/Set Detail

.detailContainer
    display: flex
    flex-wrap: wrap
    text-align: center

#flexVertical
    flex-direction: column

.detailList
    margin: .625rem
    display: grid
    grid-template-columns: auto 1fr
    grid-auto-flow: row dense
    grid-gap: 0.3em

.detailKey
    grid-column-start: 1
    font-weight: bold
    text-align: right

.detailVal
    grid-column-start: 2
    white-space: break-spaces
    text-align: left
    max-width: 40em

// Fix array items
.detailArr:not(:last-child):after
    content: ', '
    
// Additional element styles
a.detailOption
    display: inline-block
    padding: 0.5em
    width: 7em

.spacer
    min-height: 0.5em

.empty
    font-style: italic
    opacity: 0.75

// Change card image behavior
.cardDetailImage .cardContainer:hover
    box-shadow: none !important

.cardDetailImage * .side-a:hover 
  opacity: 1 !important


// Set specific
.boosterDetail
    text-align: left
    margin: 1em

.boosterList
    margin: 0.3em 0

ul.boosterList
    padding-left: 2em

.weight
    font-style: italic
    font-weight: lighter
    font-size: 0.8em


// Sheet specific

.sheetSetName
    font-style: italic
    font-size: 1.25em
    font-weight: lighter
    margin-left: 0.2em
    margin-bottom: 0.5em

.sheetCardContainer
    display: grid
    margin: 0.4em 0
    grid-auto-flow: row
    grid-template-columns: repeat(auto-fit, minmax(max-content,18rem))
    & .cardLineBgd
        font-size: 0.85em

// Card specific

#editCard
    margin: auto 1em
    width: 4.5em
    padding: 0.2em

.detailVal[contenteditable="true"]
    background: alpha(white,0.2)

.hasFix::before
    content: '*'

// Fixes specific

#fixesSubpanel
    width: 100%

option.fixOn::before
option.fixOff::before
    content: '‚óè '
    // font-size: 0.8em
    margin: 0 0.2em

option.fixOn::before
    color: green
option.fixOff::before
    color: red

// Fixes editor

#fixesEditor
    margin-top: 0.3em

#cardName
    display: block
    font-style: italic
    opacity: 0.8
    margin-bottom: 0.4em
    height: 1.2em

#fixEditBox
    text-align: center
    border: solid 0.2rem bodyText
    width: 80%
    z-index: 1000
    position: absolute;
    left: 9.5%;
    padding: 0.5%;
    background: bodyBgd;
    top: 6rem;

div#fixEditBgd
    position: absolute
    background: alpha(black,50%)
    top: 0
    left: 0
    width: 100vw
    height: 200vh
    z-index: 999
    overflow: hidden

.infoLine
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: center

span.panelOption
    margin: 0.5em 0.8em

div.panelOption
    width: 100%
    margin: 0.35em 0

input#value
    width: calc(100% - 11em)
input#note
    width: calc(100% - 8em)

input#uuid
    width: 19em

.panelButtons
    position: relative

input#fixRename
    width: 7.5em

input#fixNewName
    position: absolute
    right: -15.5em;
    width: 15em;

.editorSelect
    font-family: monospace

span.editorSelect
    display: inline-block
    min-width: 8em
    min-height: 1.2em
    line-height: 1.2em
    padding: 0.2em
    padding-right: 0.3em

    font-style: italic
    text-align: left
    vertical-align: middle
    user-select: all

    color: black
    background: alpha(white,95%)
    border: solid 1px black
    opacity: 0.85
    
