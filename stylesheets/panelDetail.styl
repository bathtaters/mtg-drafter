// Main layout of Card/Set Detail

.detailContainer
    display: flex
    flex-wrap: wrap
    text-align: center

#flexVertical
    flex-direction: column

.detailList
    margin: .625rem
    display: grid
    grid-template-columns: auto 1fr
    grid-auto-flow: row dense
    grid-gap: 0.3em

.detailKey
    grid-column-start: 1
    font-weight: bold
    text-align: right

.detailVal
    grid-column-start: 2
    white-space: break-spaces
    text-align: left
    max-width: 40em

// Fix array items
.detailArr:not(:last-child):after
    content: ', '
    
// Additional element styles
a.detailOption
    display: inline-block
    padding: 0.5em
    width: 7em

.spacer
    min-height: 0.5em

.empty
    font-style: italic
    opacity: 0.75

// Change card image behavior
.cardDetailImage .cardContainer:hover
    box-shadow: none !important

.cardDetailImage * .side-a:hover 
  opacity: 1 !important


// Set specific
.boosterDetail
    text-align: left
    margin: 1em

.boosterList
    margin: 0.3em 0

ul.boosterList
    padding-left: 2em

.weight
    font-style: italic
    font-weight: lighter
    font-size: 0.8em


// Sheet specific

.sheetSetName
    font-style: italic
    font-size: 1.25em
    font-weight: lighter
    margin-left: 0.2em
    margin-bottom: 0.5em

.sheetCardContainer
    display: grid
    margin: 0.4em 0
    grid-auto-flow: row
    grid-template-columns: repeat(auto-fit, minmax(max-content,18rem))
    & .cardLineBgd
        font-size: 0.85em

// Card specific

#editCard
    margin: auto 1em
    width: 4.5em
    padding: 0.2em

.detailVal[contenteditable="true"]
    background: alpha(white,0.2)

.hasFix::before
    content: '*'

// Fixes specific

#fixesSubpanel
    width: 100%

option.fixOn::before
option.fixOff::before
    content: '● '
    // font-size: 0.8em
    margin: 0 0.2em

option.fixOn::before
    color: green
option.fixOff::before
    color: red

// Fixes editor

#fixesEditor
    margin-top: 0.3em

#cardName
    display: block
    font-style: italic
    opacity: 0.8
    margin-bottom: 0.4em
    height: 1.2em

#fixEditBox
    text-align: center
    border: solid 0.2rem bodyText
    width: 80%
    z-index: 1000
    position: absolute;
    left: 9.5%;
    padding: 0.5%;
    background: bodyBgd;
    top: 6rem;

div#fixEditBgd
    position: absolute
    background: alpha(black,50%)
    top: 0
    left: 0
    width: 100vw
    height: 200vh
    z-index: 999
    overflow: hidden

.infoLine
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: center

span.panelOption
    margin: 0.5em 0.8em

div.panelOption
    width: 100%
    margin: 0.35em 0

input#value
    width: calc(100% - 11em)
input#note
    width: calc(100% - 8em)

input#uuid
    width: 19em

.panelButtons
    position: relative

input#fixRename
    width: 7.5em

input#fixNewName
    position: absolute
    right: -15.5em;
    width: 15em;

.editorSelect
    font-family: monospace

span.editorSelect
    display: inline-block
    min-width: 8em
    min-height: 1.2em
    line-height: 1.2em
    padding: 0.2em
    padding-right: 0.3em

    font-style: italic
    text-align: left
    vertical-align: middle
    user-select: all

    color: black
    background: alpha(white,95%)
    border: solid 1px black
    opacity: 0.85
    
.button.rmvFix
    padding: 0 0.1em 0.16em 0.12em
    margin: 0 0.3em
    height: 1em
    line-height: 0em
    vertical-align: top
    border-width: 0.1em



// Database Box

// Header
.explorerHeader
    margin: 1em

.explorerHeader h1
.explorerViewContainer
    display: inline-block
    vertical-align: middle

div.explorerViewContainer
    position: relative

    & .button
        max-width: 10em
        padding: 0.5em 1em
        margin: 0.5em 3em

    & form#viewForm
        display flex
        flex-wrap: wrap
        justify-content: space-between

        & .explorerViewCheckbox
            margin: 0.2em 0.5em


// Query
#queryFilterTitle
#queryDisplayTitle
    font-size: 1.2em
    font-weight: bold
    margin-inline-end: 0.35em
    opacity: 0.75

#queryDisplay
#queryFilter
#queryButtons
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: flex-start
    align-items: baseline
    margin: 1em

.queryFilterItem
    margin: 0.2em 0.8em

    & > input
        margin-left: 0.2em

        &.button
            font-size: 0.7em
            width: 2.3em
            height: 2.0em
            padding: 0
            border-width: 0.3em

#queryButtons > .button
    margin: 0 1em
    padding: 0.3em 0.5em

#queryDisplayTitle
    margin-inline-end: 0.35em

.queryDisplayItem
    margin-inline: 0.45em

.queryName
    font-weight: bold
    font-style: italic
    margin-inline: 0.15em

.queryVal
    margin-inline: 0.4em 0.15em

    &::before
        font-style: italic
        font-size: 0.7em
        opacity: 0.6
        margin-inline-end: 0.6em

    &.queryAnd::before
        content: 'AND'

    &.queryOr::before
        content: 'OR'

.rmvKey
    display: inline-block
    border: none
    vertical-align: super
    font-size: .7em
    padding: 0 0.3em 0.1em
    line-height: 1.2em


// Image Thumbnails
.thumbnail-img
  display: none
  width: 360px
  height: 510px
  position: fixed

td.thumbnail
  background: #555
  position: relative

.thumbnail:hover > .thumbnail-img
  display: block
  top: calc(50vh - 260px)
  left: calc(2rem + 60px)
  z-index: 1000


// Results
.resultsContainer
    background: #111
    margin: 0.5em
    max-height: calc(100vh - 10em)
    overflow: auto
    width: fit-content
    max-width: calc(100% - 1em)

#resultsTable
    table-layout: auto
    border-collapse: collapse
    font-size: 0.9em
    min-width: 60em

    & > thead > tr
        background: #ccc
        color: #111
        text-align: left

    & > thead > tr > th
        padding: 0.9em 0.5em
        border: solid 2px #999
        cursor: pointer

        max-width: 100%
        white-space: nowrap

        &::after
            position: absolute
            right: 50%
            font-size: 0.5em

        &.sortAsc::after
            content: '▲'
            top: 0

        &.sortDesc::after
            content: '▼'
            bottom: 0

    & th
    & td
        padding: 0.3em 0.5em
        position: relative

        &:hover .detailVal.strPopup
            display: block
    
    &:not(.hideBgds) > tbody > tr
        &
        & a:not(:hover)
            color: bodyBgd

        &.bgdB
        &.bgdG
        &.bgdB a:not(:hover)
        &.bgdG a:not(:hover)
            color: bodyText
    
    &.hideBgds > tbody > tr
        background: #111
        color: bodyText

    & td .detailVal
        white-space: nowrap

        &.strPopup
            display: none
            top: -0.4em
            left: -0.2em
            white-space: break-spaces

// Popup Box

.popupBox
    position: absolute
    color: bodyText
    background: rgba(16,16,16,0.9)
    z-index: 100
    padding: 0.5em
    width: calc(100% + 1em)
    border: solid 0.2em #999

    