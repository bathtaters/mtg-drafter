// Main layout of Card Detail

.cardDetailContainer
    display: flex
    flex-wrap: wrap
    text-align: center

.cardDetailList
    margin: .625rem
    display: grid
    grid-template-columns: auto 1fr
    grid-auto-flow: row dense
    grid-gap: 0.3em

.cardDetailKey
    grid-column-start: 1
    font-weight: bold
    text-align: right

.cardDetailVal
    grid-column-start: 2
    white-space: break-spaces
    text-align: left
    max-width: 50em

// Additional element styles
a.detailOption
    display: inline-block
    padding: 0.5em
    width: 7em

.spacer
    min-height: 0.5em

.empty
    font-style: italic
    opacity: 75%

// Change card image behavior
.cardDetailImage .cardContainer:hover
    box-shadow: none !important

.cardDetailImage * .side-a:hover 
  opacity: 100% !important

// Fix array items
.cardDetailArr:not(:last-child):after
    content: ', '