// Admin Panel styling

#sessionsContainer
    display: flex
    flex-direction: column
    align-items: center
    max-width: 26rem

.panelSelect
    width: 100%
    height: 17rem

.containerTitle
    padding: 0.3rem
    font-size: 1rem

.panelSelect option
    font-family: monospace
    padding: 0.3em

.panelButtons
    display: flex
    justify-content: space-evenly
    padding: 0.5rem

.panelButtons .button
    margin: 0.3rem

#clearDays
    max-width: 2em
    margin: 0 0.5em
#sessionClear
    margin 0 0.5em



// Session detail view

.sessionDetail
    display: grid
    grid-template-areas: "head button" "info extras"
    grid-template-columns: max-content
    grid-gap: 0 1rem
    align-items: center
    margin-bottom: 0.5em

.sessionHeader
    grid-area: head

.sessionInfo
    grid-area: info

.sessionDisconnectContainer
    grid-area: button

.sessionExtraDetail
    grid-area: extras

.sessionHeader h1
    display: inline-block

.sessionHeader a
    padding-left: 0.7em
    font-size: 0.7em

.sessionUrl
.sessionTimeDate
    font-size: 0.7em

.sessionStatus
    font-style: italic
    margin-inline-end: 1em


// Player boxes

.adminPlayers
    display: flex
    flex-wrap: wrap

.adminPlayerContainer
    font-size: 0.67em
    border: solid
    padding: 0.5em
    margin: 0.5em
    width: 13rem
    position relative

.adminPlayerHeader
    display: flex
    align-items: center

.playerPosition
    position: absolute
    top: 0.1rem
    left: 0.2rem
    font-size: 0.7rem
    opacity: 75%

.playerPosition.host::after
    content: "host"
    font-size: 0.7em;
    position: absolute;
    margin-left: 0.3em;
    color: gold;

.connectionButton
    width: 0.6rem
    height: 0.6rem
    border-radius: 1rem
    padding: 0
    margin: 0.2rem
    border-width: 0.1rem

.connectionButton.connected
    background-color: green
    &:focus
      border: solid 0.1rem darkgreen
    &:hover
      background-color: darkgreen

.connectionButton.disconnected
    background-color: red
    &:focus
      border: solid 0.1rem darkred   
    &:hover
      background-color: darkred

div.playerId
    margin-top: -.3em
    margin-bottom: 0.7em

.playerId
    font-size: 0.8em
    font-style: italic

.playerDraftDetail
    margin-inline-end: 1em

.playerDetailTitle
    font-weight: bold
    margin-inline-end: 0.3em

.playerDetailOpponent
.playerDraftDetailContainer
    margin-block: 0.2em

#mainDetailTitle
    margin-block-start: 0.4em

#mainDetailTitle
#sideDetailTitle
    padding-left: 0

.mainLandData
.sideLandData
    display: flex
    flex-wrap: wrap
    margin-bottom: 0.7em

.landDetailBox
    margin: 0 0.5em

.landCount
    margin-inline-start: 0.3em

ul.adminPlayerDeck
    padding-inline-start: 2em
    margin-block-start: 0
    margin-block-end: 0.7em

