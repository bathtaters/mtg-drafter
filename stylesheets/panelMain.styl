// Admin Panel styling

// General styles

#panelTitle
    display: inline-block
    margin-inline-start: 0.5rem
    // margin-inline-end: 2rem

#userHeader
    margin-top: 0.5em
    // font-size: 0.8em
    font-style: italic

.headerLink
    margin-inline-start: 2em
    font-size: 0.7em

#panelWrapper
    display: flex
    flex-wrap: wrap

.panelContainer
    display: flex
    flex-direction: column
    align-items: center
    margin: 0.8rem

.panelSelect
    width: 100%
    height: 17rem
    overflow: auto

.containerTitle
    padding: 0.3rem
    font-size: 1rem

.panelSelect option
    font-family: monospace
    padding: 0.3em

.panelButtons
    display: flex
    justify-content: space-evenly
    align-items: center
    padding: 0.4rem

.panelButtons .button
    margin: 0 0.3rem

.smallInputBox
    margin: 0 0.5em

input:disabled+label
    opacity: 75%
    font-style: italic

.resultText
    font-size: 0.7em
    margin: 1em
    font-style: italic
    opacity: 75%
    min-height: 1.2em

.inlineInfo
    display: inline-block
    margin: 0.5em

div.infoTitle
    text-decoration: underline
    
.infoTitle
    font-size: 0.9em
    font-weight: bold
    text-align: center

.infoLabel
.infoValue
    margin: 0 0.2em
    font-size: 0.8em

.infoLabel
    font-weight: bold

textButtonLine(labelWidth, buttonWidth, fontSize = 0.8em, elemSpacing = 0.4em)
    display: flex
    align-items: baseline
    width: 100%
    margin: elemSpacing 0

    & label
        font-size: fontSize
        width: (labelWidth - elemSpacing)
        text-align: right

    & input
    & .buttonSpacer
        font-size: fontSize
        min-width: buttonWidth
        margin: 0 elemSpacing
    
    & input:not(.button)
        font-size: (fontSize * 0.90)
        width: "calc(100% - %s)" % labelWidth



// Session settings

#sessionsContainer
    max-width: 26rem

#sessionClear
    margin 0 0.5em



// Set settings

#setsContainer
    max-width: 26rem

option.setOff
    opacity: 75%
    font-style: italic

#clearDays
    max-width: 2em

.setsDefaultLabel
    text-align: right





// Database updater

#dbContainer
    max-width: 22rem
    padding: 0.5rem

.dbUrlLine
    textButtonLine(4em,4em)

.dbCheckbox
.dbCheckboxContainer
    display: flex  
    flex-direction: row
    align-items: center

.dbCheckboxContainer
    flex-wrap: wrap
    justify-content: center

.dbCheckbox
    font-size: 0.8em
    margin: 0.2rem 0.3rem


#updateDbButton
    margin: 0.5rem
    padding: 0.3rem 0.5rem

#dbAdditionalContainer
    text-align: center



// User settings

#userContainer .panelContainer
    margin: 0
    width: 100%

#sudoList
    width: 100%
    display: flex
    align-items: center

#sudoAddLines
    display: inline-block

.sideButtons
    display: flex
    flex-direction: column

#userRemove
    margin: 0 25%
    padding: 0.3em
    flex-grow: 1

#userBox
    width: 65%
    height: 5rem

    & option
        font-size: 0.8em

.sideButtons input
    margin: 0.2em 1em

.userLine
    textButtonLine(13em,5em)

.sudoLine
    textButtonLine(6.5em,4em)




// AdminMixins


// One-line Card display
.cardLineBgd
    outline: solid .03em bodyBgd
    padding: 0.1em 0.5em
    font-family: serif

    & *
    & a
        color: bodyBgd
        padding-inline-end: 0.3em

    &.bgdB *
    &.bgdG *
        color: bodyText
        opacity: 85%

a.cardOneLine
    padding: 0.1em

    &:not(:hover)
        text-decoration: none
    &:hover
        text-decoration: underline

    

